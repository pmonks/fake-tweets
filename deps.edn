{:deps {org.clojure/clojure   {:mvn/version "1.10.3"}
        rm-hull/markov-chains {:mvn/version "0.1.1"}
        cheshire/cheshire     {:mvn/version "5.10.0"}}
 :aliases
   {
    ; clj -M:check
    :check
      {:extra-deps {athos/clj-check {:git/url "https://github.com/athos/clj-check.git"
                                     :sha     "cd1f25456de5eebda0a69602dd3445905382b3a4"}}
       :main-opts  ["-m" "clj-check.check"]}


    ; clj -M:kondo
    :kondo
      {:extra-deps {clj-kondo/clj-kondo {:mvn/version "2021.03.03"}}
       :main-opts  ["-m" "clj-kondo.main" "--lint" "src"]}

    ; clj -M:eastwood
    :eastwood
      {:extra-deps {jonase/eastwood {:mvn/version "0.3.14"}}
       :main-opts  ["-m" "eastwood.lint" {:source-paths ["src" "resources"]}]}

    ; clj -M:outdated
    :outdated
      {:extra-deps {com.github.liquidz/antq {:mvn/version "0.12.2"}}
       :main-opts  ["-m" "antq.core"]}}}
